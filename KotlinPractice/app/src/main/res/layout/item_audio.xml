<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spacing_tiny">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_attachment_border_background"
        android:padding="@dimen/spacing_tiny">

        <View
            android:id="@+id/timeLine"
            android:layout_width="@dimen/itemMusicWidth"
            android:layout_height="@dimen/dividerHeight"
            android:background="@color/lightGray"
            app:layout_constraintBottom_toBottomOf="@+id/headPhone"
            app:layout_constraintStart_toEndOf="@id/play"
            app:layout_constraintTop_toTopOf="@+id/headPhone"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/headPhone"
            app:layout_constraintStart_toEndOf="@id/headPhone"
            app:layout_constraintTop_toTopOf="@id/headPhone" />

        <ImageView
            android:id="@+id/headPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_headset"
            app:layout_constraintEnd_toStartOf="@id/play"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_circle_background"
            android:padding="@dimen/spacing_tiny"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>