<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/theme_light_primary</item>
        <item name="colorOnPrimary">@color/theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/theme_light_secondary</item>
        <item name="colorOnSecondary">@color/theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/theme_light_error</item>
        <item name="colorErrorContainer">@color/theme_light_errorContainer</item>
        <item name="colorOnError">@color/theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/theme_light_background</item>
        <item name="colorOnBackground">@color/theme_light_onBackground</item>
        <item name="colorOutline">@color/theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/theme_light_inverseSurface</item>
        <item name="colorSurface">@color/theme_light_surface</item>
        <item name="colorOnSurface">@color/theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/theme_light_onSurfaceVariant</item>
        <item name="colorPrimaryInverse">@color/theme_light_inversePrimary</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/theme_light_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>

    <style name="Theme.TextInput.Email" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:hint">@string/hint_email</item>
        <item name="android:layout_margin">@dimen/spacing_view</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Theme.EditText.Email" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:drawableStart">@drawable/ic_email</item>
        <item name="drawableTint">@color/theme_light_surfaceTint</item>
        <item name="android:drawablePadding">@dimen/spacing_very_small</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.TextInput.Password" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:hint">@string/hint_password</item>
        <item name="android:layout_margin">@dimen/spacing_view</item>
        <item name="endIconMode">password_toggle</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Theme.EditText.Password" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">numberPassword</item>
        <item name="android:drawableStart">@drawable/ic_password</item>
        <item name="drawableTint">@color/theme_light_surfaceTint</item>
        <item name="android:drawablePadding">@dimen/spacing_very_small</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.TextInput.Phone" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:hint">@string/hint_phone</item>
        <item name="android:layout_margin">@dimen/spacing_view</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Theme.EditText.Phone" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">phone</item>
        <item name="android:drawableStart">@drawable/ic_phone</item>
        <item name="drawableTint">@color/theme_light_surfaceTint</item>
        <item name="android:drawablePadding">@dimen/spacing_very_small</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.TextInput.Name" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:hint">@string/hind_name</item>
        <item name="android:layout_margin">@dimen/spacing_view</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Theme.EditText.Name" parent="Widget.AppCompat.EditText">
        <item name="android:drawableStart">@drawable/ic_person</item>
        <item name="drawableTint">@color/theme_light_surfaceTint</item>
        <item name="android:drawablePadding">@dimen/spacing_very_small</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>


    <style name="TextView_font_medium" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Textview.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textColor">@color/theme_light_primary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ShapeAppearanceOverlayImage" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>